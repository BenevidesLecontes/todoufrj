<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Descrição" %>
    <%= f.input :file, label: false, required: true, input_html: {class: "form-control"} %>
    <%= f.button :submit, 'Carregar video', class: "btn btn-primary btn-block" %>
<% end %>
