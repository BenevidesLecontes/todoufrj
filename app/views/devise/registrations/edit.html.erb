

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>
<h2 class="text-center white">Editar <%= resource_name.to_s.humanize %></h2>
  <%= f.error_notification %>

    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email", input_html: {class: "form-control"} %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando Pela confirmação: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", required: false, label: false, placeholder: "Senha", input_html: {class: "form-control"} %>
    <%= f.input :password_confirmation, required: false, label: false, placeholder: "Confirmar senha", input_html: {class: "form-control"} %>
    <%= f.input :current_password, required: true, label: false, placeholder: "Senha atual", input_html: {class: "form-control"} %>


    <%= f.button :submit, "Atualizar", class: "btn btn-primary btn-block" %>

<h3 class="white text-center">Cancelar minha conta</h3>

<p class="white text-center">Instisfeito? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back, class: 'text-center btn-block' %>

<% end %>


